@namespace AntDesign
@inherits AntDomComponentBase

<div class="@ClassMapper.Class" @ref="Ref">
    @if (ChildContent != null)  @ChildContent(_leftRenderProps)
    else
    {
        <TransferList TransferRenderProps="_leftRenderProps" Title="Titles[0]" DataSource="_leftDataSource"/>
    }

    <div class="ant-transfer-operation">
        <Button Disabled="@(Disabled)" Size="@AntSizeLDSType.Small" Icon="left" Type="@ButtonType.Primary" OnClick="@(e=>MoveItem(e,TransferDirection.Left))">@Operations[0]</Button>
        <Button Disabled="@(Disabled)" Size="@AntSizeLDSType.Small" Icon="right" Type="@ButtonType.Primary" OnClick="@(e=>MoveItem(e,TransferDirection.Right))">@Operations[1]</Button>
    </div>

    @if (ChildContent != null)  @ChildContent(_rightRenderProps)
    else
    {
        <TransferList TransferRenderProps="_rightRenderProps" Title="Titles[1]"  DataSource="_rightDataSource" />
    }
</div>